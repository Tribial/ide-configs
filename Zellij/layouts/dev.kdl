layout {
    tab_template name="ui" {
        pane size=1 borderless=true {
            plugin location="tab-bar"
        }
        children
        pane size=1 borderless=true {
            plugin location="status-bar"
        }
    }

    ui {
        pane focus=true
        floating_panes {
            pane {
                x "0%"
                y "3%"
                width "50%"
                height "90%"
            }
            pane {
                x "50%"
                y "3%"
                width "50%"
                height "90%"
            }
        }
    }
}
